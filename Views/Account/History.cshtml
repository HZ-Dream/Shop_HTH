@model IEnumerable<OrderModel>

@{
    ViewData["Title"] = "List Orders History Orders placed by  " + @ViewBag.UserEmail;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   
</head>
<body>
    <h3>List Orders History placed by: @ViewBag.UserEmail</h3>

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Order Code</th>
                <th>Shipping Cost</th>
                <th>Coupon</th>
                <th>UserName</th>
                <th>Order Status</th>
                <th>Payment Method</th>
                <th>Created Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.OrderCode</td>
                    <td>@item.ShippingCost.ToString("#,##0 đ")</td>
                    <td>@item.CouponCode</td>
                    <td>@item.UserName</td>
                    <td>
                        @if (item.Status == 1)
                        {
                            <span class="text text-success">Đơn hàng mới</span>
                        }
                        else if (item.Status == 2)
                        {
                            <span class="text text-primary">Đã giao hàng</span>
                        }
                        else
                        {
                            <span class="text text-danger">Đã hủy</span>
                         }
                        </td>
                    <td>
                        @{
                            string text = item.PaymentMethod;
                            string textSplit = text.Split(" ")[0];
                            string codeSplit = text.Split(" ")[1];
                        }
                        @if (textSplit == "COD")
                        {
                            <span class="text text-primary">@textSplit</span>
                        }
                        else
                        {
                            if (textSplit == "VnPay")
                            {
                                <a asp-controller="Order" asp-action="PaymentVnpayInfo" asp-route-orderId=@codeSplit>
                                    <span class="text text-success">
                                        @textSplit
                                    </span>
                                </a>
                            }
                            else if (textSplit == "MOMO")
                            {
                                <span class="text text-success">@text</span>
                            }
                        }
                    </td>
                    <td>@item.CreatedDate.ToString("dd-MM-yyyy")</td>
                    <td>
                       @if (item.Status != 3)
                        {
                            <a onclick="return confirm('Bạn xác nhận muốn hủy?')" class="btn btn-danger btn-sm" asp-action="CancelOrder" asp-controller="Account" asp-route-ordercode="@item.OrderCode">Hủy đơn hàng</a>
                        }
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>